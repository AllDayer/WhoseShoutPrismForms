<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="{Binding Title}"
             x:Class="WhoseShoutFormsPrism.Views.BuyPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Logout" Command="{Binding LogoutCommand}" />
    </ContentPage.ToolbarItems>
    <StackLayout>
        <Label Text="How much is this going to cost?"/>
        <Entry Placeholder="Cost" Text="{Binding Cost}"/>
        <Label Text="Who is buying?" />
        <Picker ItemsSource="{Binding UsersForShout}" ItemDisplayBinding="{Binding UserName}" SelectedIndex="{Binding SelectedIndex}"/>
        <Button Text="Buy" Command="{Binding BuyCommand}"/>
    </StackLayout>

</ContentPage>
