<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="{Binding Title}"
             x:Class="WhoseShoutFormsPrism.Views.BuyPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Logout" Command="{Binding LogoutCommand}" />
    </ContentPage.ToolbarItems>
    <StackLayout>
        <Label Text="ShoutID" />
        <Label Text="{Binding ID}"/>
        <Label Text="ShoutGroupID" />
        <Label Text="{Binding GroupID}"/>
        <Entry Placeholder="Cost" Text="{Binding Cost}"/>

        <Entry Text="{Binding UserName}"/>
        <!--<Picker ItemsSource="{Binding MyCountries}" SelectedIndex="{Binding SelectedIndex}"/>-->
        <Button Text="Buy" Command="{Binding BuyCommand}"/>

        <Label Text="{Binding ShoutDto}"/>

    </StackLayout>

</ContentPage>
